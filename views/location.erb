<div class="row">
    <div class="col-sm-4">

        <h1><%= @location[:title] %></h1>
        <p><%= @location[:description] %></p>
        <% for review in @reviews%>
        
        
        <div class="media">
                <% if review[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/locations/<%= @location[:id] %>/reviews/new" class="btn btn-primary">Update the trails now!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to update trail status</a>
            <% end %>
        </p>
    </div>

    <div class="col-sm-6">
        <img src=<%= @location[:map] %> width="500" height="500" />
    </div>

    <div class="col-sm-2">
        <h4>Number of Reviews?</h4>
        <p><%= @going_count %></p>
    </div>
</div>